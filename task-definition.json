{
  "family": "lampstack-task",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "256",
  "memory": "512",
  "executionRoleArn": "arn:aws:iam::313043028266:role/ecsTaskExecutionRole",
  "containerDefinitions": [
    {
      "name": "lampstack-container",
      "image": "313043028266.dkr.ecr.eu-west-1.amazonaws.com/lampstack:latest",
      "portMappings": [
        {
          "containerPort": 80,
          "protocol": "tcp"
        }
      ],
      "secrets": [
      {
        "name": "DB_SECRET_JSON",
        "valueFrom": "aarn:aws:secretsmanager:eu-west-1:313043028266:secret:lampstack-db-secret-LK267f"
      }
      ],

      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/lampstack",
          "awslogs-region": "eu-west-1",
          "awslogs-stream-prefix": "ecs"
        }
      }
    }
  ]
}