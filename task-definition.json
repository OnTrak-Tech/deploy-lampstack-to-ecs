{
  "family": "lampstack-task",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "256",
  "memory": "512",
  "executionRoleArn": "arn:aws:iam::313043028266:role/ecsTaskExecutionRole",
  "containerDefinitions": [
    {
      "name": "lampstack-container",
      "image": "313043028266.dkr.ecr.eu-west-1.amazonaws.com/lampstack:latest",
      "portMappings": [
        {
          "containerPort": 80,
          "protocol": "tcp"
        }
      ],
      "environment": [ 
        {
          "name": "DB_HOST",
          "value": "lampstackecs-db.c1qyq2k44hus.eu-west-1.rds.amazonaws.com"
        },
        {
          "name": "DB_USER",
          "value": "admin"
        },
        {
          "name": "DB_PASS",
          "value": "password"
        },
        {
          "name": "DB_NAME",
          "value": "lampstackecs_db" 
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/lampstack",
          "awslogs-region": "eu-west-1",
          "awslogs-stream-prefix": "ecs"
        }
      }
    }
  ]
}